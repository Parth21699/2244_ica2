pipeline {
    agent any
    stages {
        stage('Cleanup') {
            steps {
                cleanWs()
            }
        }

        stage('Clone Git Repo') {
            steps {
                checkout scm
            }
        }

        stage('Build image') {
            steps {
                sh 'docker build -t mywebsite .'
                sh 'docker stop mywebsite || true && docker rm mywebsite || true'
                sh 'docker run --name mywebsite -d -p 8080:80 mywebsite'
            }
        }

         stage('Test') {
            steps {
                sh 'curl -I localhost:8080'
            }
        }
        stage('Tag and Push') {
        steps {
        withCredentials([usernamePassword(credentialsId: 'docker-hub-credentials', usernameVariable: 'DOCKER_USERNAME', passwordVariable: 'DOCKER_PASSWORD')]) {
            script {
                def buildId = env.BUILD_ID
                sh "docker login -u $DOCKER_USERNAME -p $DOCKER_PASSWORD"
                sh "docker tag mywebsite parth21699/2244_ica2:latest"
                sh "docker tag mywebsite parth21699/2244_ica2:develop-${env.BUILD_ID}"
                sh "docker push parth21699/2244_ica2:latest"
                sh "docker push parth21699/2244_ica2:develop-$buildId"
            }    
        }
    }
}
}
}
